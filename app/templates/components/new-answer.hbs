{{#if addNewAnswer}}
<h1>Input your answer</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Answer</label>
      {{input value=content id="content"}}
    </div>
    <button {{action 'saveAnswer'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'answerFormShow'}}>Provide Answer</button>
{{/if}}
