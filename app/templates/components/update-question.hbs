{{#if updateQuestionForm}}
<h4>Update {{question.author}}'s question</h4>
<div>
  <form>
    <div class="form-group">
      <label for="content">Question: </label>
      {{input value=content id="content" placeholder=question.content}}
    </div>

    <div class="form-group">
      <label for="author">Author: </label>
      {{input value=author id="author" placeholder=question.author}}
    </div>

    <div class="form-group">
      <label for="note">Addtional Notes: </label>
      {{input value=note id="note" placeholder=question.note}}
    </div>

    <button {{action 'updateQuestion' question}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}
